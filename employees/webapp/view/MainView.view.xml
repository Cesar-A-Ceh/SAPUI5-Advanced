<mvc:View
    controllerName="logaligroup.employees.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page
                    id="page"
                    title="{i18n>title}">
                    <content>
                        <HBox id="hbox">
                            <Label id="labelEmployee" text="{i18n>labelEmployee}" labelFor="inputEmployee" class="sapUiSmallMargin"/>
                            <Input id="inputEmployee" value="{/employeeId}" maxLength="6" width="200px" class="sapUiSmallMarginEnd"/>
                            <Label id="labelCountry" text="{i18n>labelCountry}" labelFor="slCountry" class="sapUiSmallMargin" visible="true"/>
                            <Select id="slCountry" selectedKey="{/countryKey}" forceSelection="false" items="{/listCountry}" visible="true">
                                <items>
                                    <core:Item key="{key}" text="{text}"/>
                                </items>
                            </Select>
                            <Button id="btnFilter" text="{i18n>btnFilter}" icon="sap-icon://search" press="onFilter" class="sapUiSmallMarginEnd"></Button>
                            <Button id="btnClearFilter" text="{i18n>btnClearFilter}" icon="sap-icon://clear-filter" press="onClearFilter" class="sapUiSmallMarginEnd"></Button>
                        </HBox>
                        <HBox id="hboxtabla">
                            <Panel id="panel">
                                <Table id="tableEmployee" items="{/employees}">
                                    <columns>
                                        <Column>
                                            <header>
                                                <Label text="{i18n>tableId}"></Label>
                                            </header>                                        
                                        </Column>
                                        <Column>
                                            <header>
                                                <Label text="{i18n>tableName}"></Label>
                                            </header>                                        
                                        </Column>
                                        <Column>
                                            <header>
                                                <Label text="{i18n>tableCountry}"></Label>
                                            </header>                                        
                                        </Column>
                                        <Column>
                                            <header>
                                                <Label text="{i18n>tableCity}"></Label>
                                            </header>                                        
                                        </Column>
                                    </columns>
                                    <items>
                                        <ColumnListItem type="Active" press="showPostalCode">
                                            <cells>
                                                <Label text="{EmployeeID}"/>
                                                <Label text="{LastName}, {FirstName}"/>
                                                <Label text="{Country}"/>
                                                <Label text="{City}"/>
                                            </cells>
                                        </ColumnListItem>
                                    </items>
                                </Table>
                            </Panel>
                        </HBox>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
